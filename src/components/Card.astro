---
import { Image } from "astro:assets"; 

interface Props {
  image: ImageMetadata | string | undefined;
  alt: string;
  href: string;
  prose?: boolean;
}

const { image, alt, href, prose } = Astro.props;
---

<a
  href={href}
  class="group block max-w-sm mx-auto rounded-2xl border border-gray-200 bg-white shadow-sm overflow-hidden transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
>
  {image ? (
    typeof image === "string" ? (
      <img
        src={image}
        alt={alt}
        class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    ) : (
      <Image
        src={image}
        alt={alt}
        width={600}
        height={400}
        class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    )
  ) : null}

  <div class={`p-6 ${prose ? "prose prose-h1:text-xl" : ""}`}>
    <div class="text-lg font-semibold text-gray-900 group-hover:text-brand-600 transition-colors">
      <slot name="title" />
    </div>
    <p class="mt-2 text-gray-600 text-sm leading-relaxed">
      <slot />
    </p>
  </div>
</a>
