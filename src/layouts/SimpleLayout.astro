---
import Hero from "../components/Hero.astro";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
const pageTitle = frontmatter?.title ? `${frontmatter.title} â€” PathForward Pharmacology` : "PathForward Pharmacology";
---

<BaseLayout
  title={pageTitle}
  desc={frontmatter?.subtitle}
>
  <Hero color="bg-gradient-to-br from-[#0ea5e9] via-[#22c55e] to-[#0ea5e9]" invert>
    <div class="w-full max-w-[90rem] mx-auto">
      <div class="bg-white/20 backdrop-blur-md p-8 rounded-xl border border-white/30 shadow-2xl">
        <h1 class="text-4xl md:text-5xl font-bold text-white drop-shadow-lg mb-4">
          {frontmatter?.title ?? "PathForward Pharmacology"}
        </h1>
        {frontmatter?.subtitle ? (
          <p class="text-xl md:text-2xl text-white/95 font-medium leading-relaxed">
            {frontmatter.subtitle}
          </p>
        ) : null}
      </div>
    </div>
  </Hero>

  <div class="px-6 sm:px-8 lg:px-10">
    <div
      class={`prose ${
        frontmatter?.max_w ? frontmatter.max_w : ""
      } mx-auto my-16 ${
        frontmatter?.centered ? "prose-headings:text-center" : ""
      }`}
    >
      <slot />
    </div>
  </div>
</BaseLayout>
