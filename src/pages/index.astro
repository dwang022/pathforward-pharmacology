---
import BaseLayout from "../layouts/BaseLayout.astro";
import HomeHero from "../components/HomeHero.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";

const desc =
  "Preclinical pharmacology consulting for oncology—PK/PD integration, dose rationale, biomarker strategy, and translational insight to support confident go/no-go decisions.";
---

<BaseLayout title="PathForward Pharmacology" desc={desc}>
  <div class="w-full">
    <!-- Professional homepage hero tailored to Dr. Wang -->
    <HomeHero
      title="Preclinical Pharmacology for Oncology Programs"
      subtitle="Led by Dr. Hui Qin Wang, a preclinical pharmacologist with 20+ years in oncology drug development. We integrate PK/PD, efficacy, and biomarker strategy to bring clarity to go/no-go decisions from discovery through early clinical."
      primaryHref="/contact"
      primaryText="Contact Us"
      secondaryHref="/services"
      secondaryText="How We Help →"
    />

    <!-- Core focus areas -->
    <div class="mx-auto w-full max-w-[90rem] px-6 lg:px-12 py-20" id="services">
      <h1 class="text-center font-extrabold text-4xl md:text-5xl mb-12 bg-gradient-to-r from-[#0ea5e9] to-[#22c55e] bg-clip-text text-transparent">
        Core Focus Areas
      </h1>

      <div class="flex flex-wrap justify-center gap-10">
        <!-- PK/PD & Dose Rationale -->
        <Card image="/assets/images/pkpd.jpg" href="/services" alt="PK/PD & Dose Rationale">
          <span slot="title">PK/PD & Dose Rationale</span>
          Exposure–response thinking for first-in-human and early clinical: PK/PD integration, dose range scenarios, and transparent assumptions that stand up to review.
        </Card>

        <!-- Biomarker & Translational Strategy -->
        <Card image="/assets/images/biomarkers.svg" href="/services" alt="Biomarker & Translational Strategy">
          <span slot="title">Biomarker & Translational Strategy</span>
          Define decision-enabling biomarkers, link preclinical efficacy to clinical endpoints, and align cross-functional teams on translational read-outs.
        </Card>

        <!-- Modality Experience (Small molecules, biologics, ADCs, ICEs) -->
        <Card image="/assets/images/modality.png" href="/services" alt="Oncology Modality Experience">
          <span slot="title">Oncology Modality Experience</span>
          Small molecules, biologics, ADCs, and immune cell engagers—clear pharmacology narratives tailored to the modality and mechanism of action.
        </Card>
      </div>
    </div>

    <!-- CTA band -->
    <Hero color="bg-gradient-to-br from-[#22c55e] to-[#0ea5e9]" invert center>
      <h2 class="text-2xl md:text-3xl font-bold mb-6 drop-shadow-lg">
        Need clarity for an upcoming decision?
      </h2>
      <a
        class="inline-block bg-white hover:bg-gray-50 text-[#0ea5e9] font-bold py-3 px-8 rounded-full transition-all duration-300 shadow-lg hover:shadow-xl"
        href="/contact"
      >
        Contact Us
      </a>
    </Hero>
  </div>
</BaseLayout>
